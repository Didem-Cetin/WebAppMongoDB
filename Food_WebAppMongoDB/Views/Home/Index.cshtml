@using Food_WebAppMongoDB.Entities;
@model List<Foods>

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <a asp-action="Create" class="btn btn-primary">Create</a>
</div>

<div class="row">
    <div class="col">
        <table class="table table-bordered table hover ">
            <thead>
                <tr>
                    <th>Food Name</th>
                    <th>Company</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
               @foreach (Foods item in Model)
                {
                    <tr>
                        <td>@item.FoodName</td>
                        <td>@item.Company</td>
                        <td>@item.Category</td>
                        <td>@item.Price</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>

                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure delete to this food?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>